# Core Application Environment Variables
# Copy this file to .env and adjust values

# Environment
ENV=dev
DEBUG=true

# Server Configuration
HOST=127.0.0.1
PORT=8000

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs
LOG_FORMAT=jsonl
LOG_BUFFER_MAX=1000
LOG_BUFFER_POLICY=drop_oldest
LOG_RETENTION_DAYS=7

# CORS (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# Database
DATABASE_URL=sqlite:///./jarvis.db

# Redis
REDIS_URL=redis://localhost:6379/0

# LLM (Ollama)
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2:3b

# Security
SECRET_KEY=dev-secret-key-change-in-production
API_KEYS=dev-api-key-change-in-production,dev-api-key-2

# Performance
MAX_WORKERS=4
TIMEOUT=30

# Monitoring
METRICS_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# Go/No-Go Test Configuration
API_KEY=dev-api-key-change-in-production
CORE_BASE_URL=http://127.0.0.1:8000
SLA_P95_MS=500
SSE_MIN_EVENTS=5
SSE_WINDOW_S=5
LOAD_REQUESTS=200
GO_NO_GO_OUT=./logs

# TLS Configuration (for hybrid development)
ENABLE_TLS=false
TLS_CERT=./certs/localhost.pem
TLS_KEY=./certs/localhost-key.pem
